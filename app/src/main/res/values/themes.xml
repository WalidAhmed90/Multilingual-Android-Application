<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MultiLingualApplication" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">@color/btn_blue_color</item>
        <item name="colorPrimaryVariant">@color/btn_blue_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/btn_blue_color</item>
        <item name="colorSecondaryVariant">@color/btn_blue_color</item>
        <item name="colorOnSecondary">@color/black</item>
    </style>

    <style name="Theme.MultiLingualApplication" parent="Base.Theme.MultiLingualApplication" />


    <style name="button_blue" parent="Widget.MaterialComponents.Button">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Button.blue</item>
        <item name="android:textAppearance">@style/TextAppearance.App.Button</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.SmallComponent</item>
        <item name="android:height">44dp</item>
        <item name="android:maxHeight">44dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="backgroundTint">@color/button_disabled_blue</item>
        <item name="android:backgroundTint">@color/button_disabled_blue</item>
    </style>

    <style name="ThemeOverlay.App.Button.TextButton" parent="">
        <item name="colorPrimary">@color/white</item>
    </style>

    <style name="ThemeOverlay.App.Button.blue" parent="">
        <item name="colorPrimary">@color/btn_blue_color</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="ThemeOverlay.App.Button.black" parent="">
        <item name="colorPrimary">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="ThemeOverlay.App.Button.white" parent="">
        <item name="colorPrimary">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>
    </style>

    <style name="TextAppearance.App.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/button_disabled_siro_text</item>
    </style>

    <style name="TextAppearance.App.Button.White" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/button_disabled_white_text</item>
    </style>

    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>